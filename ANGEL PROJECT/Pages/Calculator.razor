
@page "/Calculator"


<h1>Calculator</h1>

<hr />
<div>
    <div class="row">
        <div class="col-sm-3">
            <p>FirstNumber</p>
        </div>
        <div class="col-sm-4">
            <input Placeholder="Enter FirstNumber" @bind-value="num1" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <p>SecondNumber</p>
        </div>
        <div class="col-sm-4">
            <input Placeholder="Enter SecondNumber" @bind-value="num2" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <p>Result</p>
        </div>
        <div class="col-sn-4">
            <input readonly @bind-value="FinalResult" />
        </div>
    </div>
    <br />
    <div class=" row">
        <div class="col-sm-2">
            <button @onclick="AddNumber" class="btn btn-primary">Add (+)</button>
        </div>
        <div class="col-sm-2">
            <button @onclick="SubtractNumber" class="btn btn-secondary">Subtract (-)</button>
        </div>
        <div class="col-sm-2">
            <button @onclick="MultiplyNumber" class="btn btn-success">Multiply (*)</button>
        </div>
        <div class="col-sm-2">
            <button @onclick="DivideNumber" class="btn btn-info">Divide (/)</button>
        </div>

    </div>

</div>


@code {


    private string num1, num2, FinalResult;

    private void AddNumber()
    {
        FinalResult = (Convert.ToDouble(num1) + Convert.ToDouble(num2)).ToString();
    }

    private void SubtractNumber()
    {
        FinalResult = (Convert.ToDouble(num1) - Convert.ToDouble(num2)).ToString();
    }

    private void MultiplyNumber()
    {
        FinalResult = (Convert.ToDouble(num1) * Convert.ToDouble(num2)).ToString();
    }

    private void DivideNumber()
    {
        if (Convert.ToDouble(num2) != 0)
        {
            FinalResult = (Convert.ToDouble(num1) / Convert.ToDouble(num2)).ToString();
        }

        else
        {
            FinalResult = "Cannot Divide by Zero";











        }

    }

}
