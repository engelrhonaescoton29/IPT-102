@page "/INTERACTIVE"
@using ANGEL_PROJECT.Data

<div>
    <p> Name: @Input.Name</p>
    <p> Price: @Input.Price</p>
    <p> Address: @Input.Address</p>

</div>
<EditForm Model="Input" OnInvalidSubmit="SubmitCatData" name="Cat-form" method="Post">
    <div class="row">
        <div class=" col-2">
            <div class=" form-floating">
                <InputText @bind-Value="Input.Name"
                           class=" form-control" />
                <label class=" form-label" for=" Input.Name"> Name</label>
            </div>

        </div>
    </div>
    <div class="row">
        <div class=" col-2">
            <div class=" form-floating">
                <InputText @bind-Value="Input.Price"
                           class=" form-control" />
                <label class=" form-label" for=" Input.Price"> Price</label>
            </div>

        </div>
    </div>
    <div class="row">
        <div class=" col-2">
            <div class=" form-floating">
                <InputText @bind-Value="Input.Address"
                           class=" form-control" />
                <label class=" form-label" for=" Input.Address"> Address</label>
            </div>

        </div>
    </div>

    <button class=" btn btn-primary" type="Submit"> Save</button>
    <button class=" btn btn-secondary" type="button" @onclick="NewCat">New</button>
</EditForm>


@code
{
    private Cat Input { get; set; } = new();
    private string? _Name = null;
    private const string textRoute = "/index";
    private bool showCatData;
    private void NewCat() => Input = new();
    private void SubmitCatData()
    {
        showCatData = true;
    }
}